<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-hospital"></i> Add New Hospital</h4>
        </div>
        <div class="card-body">
            <form action="/admin/hospitals/create" method="POST" id="hospitalForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="hospitalName">Hospital Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="hospitalName" name="name" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="hospitalEmail">Email Address <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="hospitalEmail" name="email" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="hospitalPhone">Phone Number <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" id="hospitalPhone" name="phone" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="contactPerson">Primary Contact Person <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="contactPerson" name="contactPerson" required>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="address">Address <span class="text-danger">*</span></label>
                            <textarea class="form-control" id="address" name="address" rows="2" required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="city">City <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="city" name="city" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="state">State <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="state" name="state" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="zipCode">Zip Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="zipCode" name="zipCode" required>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="hospitalType">Hospital Type <span class="text-danger">*</span></label>
                            <select class="form-control" id="hospitalType" name="type" required>
                                <option value="">Select Hospital Type</option>
                                <option value="government">Government</option>
                                <option value="private">Private</option>
                                <option value="nonprofit">Non-Profit</option>
                                <option value="teaching">Teaching</option>
                                <option value="specialized">Specialized</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="bedCount">Bed Count</label>
                            <input type="number" class="form-control" id="bedCount" name="bedCount" min="0">
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="emergencyContact">Emergency Contact Number</label>
                            <input type="tel" class="form-control" id="emergencyContact" name="emergencyContact">
                        </div>
                        
                        <div class="form-group">
                            <label for="website">Website</label>
                            <input type="url" class="form-control" id="website" name="website" placeholder="https://...">
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="notes">Additional Notes</label>
                    <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                </div>
                
                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="isActive" name="isActive" checked>
                        <label class="custom-control-label" for="isActive">Active Hospital</label>
                    </div>
                </div>
                
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Hospital
                    </button>
                    <a href="/admin/hospitals" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Form validation
        $('#hospitalForm').submit(function(event) {
            // Basic validation example - can be expanded
            const name = $('#hospitalName').val().trim();
            const email = $('#hospitalEmail').val().trim();
            const phone = $('#hospitalPhone').val().trim();
            
            if (name === '') {
                event.preventDefault();
                alert('Hospital name is required');
                $('#hospitalName').focus();
                return false;
            }
            
            if (email === '') {
                event.preventDefault();
                alert('Email address is required');
                $('#hospitalEmail').focus();
                return false;
            }
            
            if (phone === '') {
                event.preventDefault();
                alert('Phone number is required');
                $('#hospitalPhone').focus();
                return false;
            }
            
            return true;
        });
        
        // Phone number formatting (optional)
        $('#hospitalPhone, #emergencyContact').on('input', function() {
            const input = $(this).val().replace(/\D/g, '');
            if (input.length > 10) {
                $(this).val(input.substring(0, 10));
            }
        });
    });
</script> 